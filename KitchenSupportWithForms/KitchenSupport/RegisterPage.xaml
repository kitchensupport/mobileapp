<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="KitchenSupport.RegisterPage">
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="50"
   		   	VerticalOptions="Center">
   		   	<Button Text = "Back"
				HorizontalOptions="LayoutOptions.Start"
				Clicked="navigateBack"/>
   			<Label Text="Create an Account"
   				FontSize="36"
   				HorizontalOptions="Center"/>
   			<Entry Placeholder="Email"
  				   	x:Name="email"
   				   	Text="{Binding email}"/>
   			<Entry Placeholder="Password"
   				   	x:Name="password"
   				   	Text="{Binding password}"
   				   	IsPassword="true"/>
   			<Entry Placeholder="Confirm Password"
   				   	x:Name="confirmPassword"
   				   	Text="{Binding confirmPassword}"
   				   	IsPassword="true"/>
   			<Button Text="Register" TextColor="White"
   			   	BackgroundColor="#77D065"
   			   	Clicked="register"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
